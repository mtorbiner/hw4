          <a href="/logout" class="btn btn-light">Logout</a>
        <%else%>
          <a href="/sessions/new" class="navbar-brand">Login</a>
          <a href="/users/new" class="navbar-brand">Signup</a>
        <%end%>

      </div>
      
    </div>
  </nav>

